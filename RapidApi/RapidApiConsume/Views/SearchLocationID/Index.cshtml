@model List<SearchLocationIdViewModel>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    @using (Html.BeginForm("Index", "SearchLocationID", FormMethod.Post))
    { 
    <label>Şehir Adı Giriniz</label>
    <input type="text" name="cityName" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Şehir Id Bul</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>Otel ID</th>
        </tr>
        @foreach (var item in Model.Take(1))
        {
            <tr>
                <td>@item.dest_id</td>


            </tr>
            }
    </table>
    <br />
    <a href="/Booking/Index/" class="btn btn-outline-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>
