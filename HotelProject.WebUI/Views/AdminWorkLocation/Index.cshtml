@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Lokasyon Adı</th>
            <th>Şehir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.WorkLocationName</td>

                <td>
                    <span>@item.WorkLocationCity</span>
                </td>
                <td>
                    <a href="/AdminWorkLocation/DeleteWorkLocation?id=@item.WorkLocationID" class="btn btn-outline-danger">Sil</a>
                </td> 
                <td>
                    <a href="/AdminWorkLocation/UpdateWorkLocation?id=@item.WorkLocationID" class="btn btn-outline-warning">Güncelle</a>
                </td>

            </tr>
        }

    </tbody>
</table>
<br />
<a href="/WorkLocation/AddWorkLocation/" class="btn btn-outline-primary">Yeni Lokasyon Kaydı</a>

