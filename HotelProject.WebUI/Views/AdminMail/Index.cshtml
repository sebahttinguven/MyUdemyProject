@model HotelProject.WebUI.Models.Mail.AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="text" class="form-control" asp-for="ReceiverMail" />
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <br />
    <label>Mesajınız</label>
    <textarea type="text" class="form-control" rows="15" asp-for="Body" />
    <br />
    <button class="btn btn-primary">Maili Gönder</button>
</form>

