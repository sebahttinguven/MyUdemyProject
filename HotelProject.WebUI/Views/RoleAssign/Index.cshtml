@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<h1>Kullanıcı Listesi</h1>
<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Kullanıcı</th>
            <th>Rol Ata</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
        <tr>
            <td>@count</td>
            <td><img src="~/adminweb/images/avatar/1.jpg" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
            <td> <a href="/RoleAssign/AssignRole?id=@item.Id" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
        }

    </tbody>
</table>
